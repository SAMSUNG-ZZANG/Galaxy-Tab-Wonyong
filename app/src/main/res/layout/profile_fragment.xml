<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="drawable"
            type="int" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.example.sopt_seminar.ui.profile.ProfileFragment">

            <ImageView
                android:id="@+id/imageView"
                setDrawable="@{drawable}"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:adjustViewBounds="true"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/home_name"
                android:textAppearance="@style/common_text"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/user_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/home_age"
                android:textAppearance="@style/common_text"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/user_name"
                app:layout_constraintStart_toStartOf="@+id/user_name"
                app:layout_constraintTop_toBottomOf="@+id/user_name" />

            <TextView
                android:id="@+id/user_mbti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/home_mbti"
                android:textAppearance="@style/common_text"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/user_age"
                app:layout_constraintStart_toStartOf="@+id/user_age"
                app:layout_constraintTop_toBottomOf="@+id/user_age" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/follower_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_txt_selector"
                android:text="@string/home_follower_btn"
                android:textAppearance="@style/common_text"
                app:layout_constraintEnd_toStartOf="@+id/user_mbti"
                app:layout_constraintTop_toBottomOf="@+id/user_mbti" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/repo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_txt_selector"
                android:text="@string/home_repository_btn"
                android:textAppearance="@style/common_text"
                app:layout_constraintStart_toEndOf="@+id/user_mbti"
                app:layout_constraintTop_toBottomOf="@+id/user_mbti" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/home_fragment_cv"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/follower_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
